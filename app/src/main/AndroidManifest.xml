<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.payu.payutestapp" >

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="disable_web_view_back"
            android:value="true" />
        <meta-data
            android:name="payu_merchant_id"
            android:value="yourkey" />
        <meta-data
            android:name="payu_merchant_salt"
            android:value="yoursalt" />

        <activity
            android:name="com.payu.payutestapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.payu.sdk.ProcessPaymentActivity"
            android:configChanges="orientation|keyboard|screenSize" />
        <activity
            android:name=".CreditCardFragmentActivity"
            android:label="@string/title_activity_credit_card_fragment" >
        </activity>
        <activity
            android:name="com.payu.payutestapp.WebviewActivity"
            android:label="@string/title_activity_webview" >
        </activity>
    </application>

</manifest>
